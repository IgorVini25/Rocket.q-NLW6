<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Admin - Rocket.Q</title>

    <!-- Metas -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Styles -->
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/admin.css" />
    <link rel="stylesheet" href="/styles/modal.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Script -->
    <script defer src="/scripts/admin.js" type="module"></script>
  </head>
  <body>
    <div id="admin" class="content">
      <header>
        <a href="/">
          <img src="/images/logo.svg" alt="Rocket.Q Logo" />
        </a>
      </header>

      <div id="bg">
        <div class="ball top"></div>
        <div class="ball bottom"></div>
      </div>

      <main>
        <div class="container">
          <section>
            <!-- Title -->
            <h2>Gerencie o sistema</h2>

            <!-- Separator -->
            <div class="separator">
              <div></div>
              <div>Database</div>
              <div></div>
            </div>

            <!-- Database Actions -->
            <button class="red dbReset">RESTAURAR BANCO DE DADOS</button>
            <div class="width48">
              <button class="viewTableRoom">Ver tabela <br />de Salas</button>
              <button class="viewTablequestions">
                Ver Tabela <br />de Questões
              </button>
            </div>
            <button class="viewAllTables">Ver todas Tabelas</button>

            <!-- Separator -->
            <div class="separator">
              <div></div>
              <div>Rooms</div>
              <div></div>
            </div>

            <!-- Room Actions -->
            <button class="deleteRoom red">Excluir sala</button>
            <div class="width48">
              <button class="getRoomPass">Obter senha de sala</button>
              <button class="deleteRoomQuestions">
                Exluir todas perguntas de uma sala
              </button>
            </div>
            <button class="getQuestionsRoom">
              Ver tabela de Questões de uma sala
            </button>
          </section>
        </div>
      </main>
      <div class="modal-wrapper">
        <div class="modal">
          <h2>Título da modal</h2>
          <p>Descrição da Modal</p>
          <form action="#" method="POST">
            <label for="password" class="sr-only"
              >Digite a senha de Admin</label
            >
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Digite a senha de Admin"
            />

            <div class="buttons">
              <div class="button grey cancel">Cancelar</div>
              <div class="button">Sim, excluir</div>
              <button class="button red">Sim, excluir</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
